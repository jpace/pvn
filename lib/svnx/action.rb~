#!/usr/bin/ruby -w
# -*- ruby -*-

require 'rubygems'
require 'riel'

module SVNx
  ADDED = Action.new :added
  DELETED = Action.new :deleted
  MODIFIED = Action.new :modified

  class Action
    def initialize str
      @type = case str
              when 'added', 'A'
                @:added
              when 'deleted', 'D'
                :deleted
              when 'deleted', 'M'
                :deleted
              when 'unversioned', '?'
                :unversioned
      end
    end
